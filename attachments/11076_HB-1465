<hibernate-mapping package="data">

	<class name="Car" table="car">
		<id name="id" type="string" unsaved-value="null" >
			<column name="car_id" sql-type="char(32)" not-null="true"/>
			<generator class="uuid.hex"/>
		</id>
		<property name="brand"/>
		
		<joined-subclass name="Truck" table="truck" select-before-update="true">
			<key column="car_id"/>
			<property name="capacity"/>
		</joined-subclass>
	</class>
</hibernate-mapping>